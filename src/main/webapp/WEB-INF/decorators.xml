<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE decorators>
<decorators defaultdir="/WEB-INF/views/decorators">
    <excludes>
        <pattern>/resource/*</pattern>
        <pattern>/resource/js/*</pattern>
        <pattern>/resource/css/*</pattern>
        <pattern>/resource/images/*</pattern>
        <pattern>/resource/images/*/*</pattern>
        <pattern>/resource/images/*/*/*</pattern>
        <!--
        <pattern>/service/*/*</pattern>
        <pattern>/service/*</pattern>
        -->
    </excludes>

    <decorator name="account" page="account.jsp">
        <pattern>/account/*</pattern>
    </decorator>

    <decorator name="main-content" page="main.jsp">
        <pattern>/index</pattern>
    </decorator>

    <decorator name="full-content" page="full-content.jsp">
        <pattern>/recipe/</pattern>
        <pattern>/recipe/create</pattern>
        <pattern>/recipe/insertRecipe</pattern>
        <pattern>/recipe/*/*</pattern>
        <pattern>/hop/</pattern>
        <pattern>/hop/*/*</pattern>
        <pattern>/style</pattern>
        <pattern>/style/</pattern>
        <pattern>/style/*/*</pattern>
        <pattern>/yeast/</pattern>
        <pattern>/yeast/*/*</pattern>
        <pattern>/fermentable/</pattern>
        <pattern>/fermentable/*/*</pattern>
        <pattern>/misc/</pattern>
        <pattern>/misc/*/*</pattern>
        <pattern>/board/</pattern>
        <pattern>/board/freeBoard</pattern>
        <pattern>/board/addBoard</pattern>
        <pattern>/board/writeBoard</pattern>
        <pattern>/board/detail/*</pattern>
        <pattern>/board/editBoard</pattern>

    </decorator>

    <decorator name="nonlayout-content" page="nonlayout-content.jsp">
        <pattern>/hop/list/</pattern>
        <pattern>/hop/list/*</pattern>
        <pattern>/style/list/</pattern>
        <pattern>/style/list/*</pattern>
        <pattern>/yeast/list/</pattern>
        <pattern>/yeast/list/*</pattern>
        <pattern>/fermentable/list/</pattern>
        <pattern>/fermentable/list/*</pattern>
        <pattern>/misc/list/</pattern>
        <pattern>/misc/list/*</pattern>
        <pattern>/board/freeBoard/list/</pattern>
    </decorator>
    <!--
<decorator name="default" page="default.jsp">

  <pattern>/help/*</pattern>
  <pattern>/company/*</pattern>
  <pattern>/profile/*</pattern>
  <pattern>/recipe/*</pattern>
  <pattern>/account/*</pattern>

        <pattern>/</pattern>
    </decorator>          -->

</decorators>